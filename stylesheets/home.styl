@import 'nib'

@font-face
  font-family: 'Ceviche One'
  font-style: normal
  font-weight: 400
  src: local('Ceviche One'), local('CevicheOne-Regular'), url('http://themes.googleusercontent.com/static/fonts/cevicheone/v4/BQRygZwg3wyGCQXvKfUbSbrIa-7acMAeDBVuclsi6Gc.woff') format('woff');

@font-face
  font-family: 'Exo 2'
  font-style: normal
  font-weight: 400
  src: local('Exo 2'), local('Exo2-Regular'), url('http://themes.googleusercontent.com/static/fonts/exo2/v1/KzoFUeaQw_faskDsymvVJqCWcynf_cDxXwCLxiixG1c.woff') format('woff')

body
  padding-bottom: 40px;
  color: #5a5a5a;
  font-family: "Lucida Grande", "Times New Roman"

h1, h2, h3, h4
  font-family: 'Exo 2', cursive
  font-size: 18px
  color: #000 !important
  text-decoration: none
  margin-left: 5px
  margin-top: 10px

h1
  font-size: 30px

h2
  font-size: 24px

h4
  font-size: 16px

h1, h2, h3:hover
  text-decoration: none !important
  color: #000 !important

a.navbar-brand
  font-family: 'Ceviche One', cursive
  font-size: 54px
  color: #FFF !important

.navbar-wrapper
  position: absolute
  top: 0
  left: 0
  right: 0
  z-index: 20

.navbar-nav.navbar-right:last-child
  margin-right: 10px !important

// Flip around the padding for proper display in narrow viewports
.navbar-wrapper .container
  padding-left: 0;
  padding-right: 0;

.navbar-wrapper .navbar
  padding-left: 15px;
  padding-right: 15px;

.container.main
  padding-top: 100px

// RESPONSIVE CSS
@media (min-width: 768px)
  .navbar-wrapper
    margin-top: 20px;

  .navbar-wrapper .container
    padding-left:  15px;
    padding-right: 15px;

  .navbar-wrapper .navbar
    padding-left:  0;
    padding-right: 0;

  .navbar-wrapper .navbar
    border-radius: 4px;

// Makes use of nib gradients to avoid having to manage all the vendor prefixes ourselves
.btn-dark
  background-color: hsl(0, 0%, 16%) !important
  background-repeat: repeat-x
  background: linear-gradient(top, #5b5b5b, #282828)
  border-color: #282828 #282828 hsl(0, 0%, 11%)
  color: #fff !important
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.33)

.btn-dark:hover
  background: none

a.thumbnail:hover
  text-decoration: none
  border-color: #000
  background-color: #edece8

  h3
    text-decoration: none !important
    color: #000 !important

.container.main
  div.logo
    p
      padding: 10px 5px

.artist-tags button
  margin-right: 7px



